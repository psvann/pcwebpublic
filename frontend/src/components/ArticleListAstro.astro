---
const posts = await Astro.glob('../pages/posts/*.md');
posts.sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));

---

<ul>
    {posts.map(post => 
        <li class="font-sans w-full my-4 mb-12 pr-16">
            <p class="font-sans font-extralight">{post.frontmatter.date}</p>
            <a href={post.url} class="hover:text-carrot"><span class="text-3xl font-semibold">{post.frontmatter.title}</span></a>
            <p class="font-sans font-light text-emerald-500">{post.frontmatter.description}</p>
        </li>)}
</ul>

